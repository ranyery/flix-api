{
  "compilerOptions": {
    "module": "NodeNext",
    "moduleResolution": "node",
    "rootDir": "src",
    "outDir": "dist",
    "target": "ES2015",
    "allowJs": false,
    "sourceMap": true,
    "skipLibCheck": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "resolveJsonModule": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
